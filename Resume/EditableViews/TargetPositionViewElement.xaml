<UserControl x:Class="Resume.EditableViews.TargetPositionViewElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Resume.EditableViews"
             xmlns:resume="clr-namespace:Resume"
             mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="Должность"/>
        <TextBox Text="{Binding Path=Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Интересы"/>
        <TextBox Text="{Binding Path=Reasons, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True"/>
    </StackPanel>
</UserControl>
